{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(tmux:*)",
      "Bash(ls:*)",
      "Bash(bun:*)",
      "Bash(mkdir:*)",
      "Bash(code:*)",
      "WebFetch(domain:*)",
      "Bash(system_profiler:*)",
      "Bash(diskutil:*)",
      "Bash(sw_vers)",
      "Read(~/.zshrc)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      }
    ]
  }
}
